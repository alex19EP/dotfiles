[rerere]
	enabled = true
[commit]
	status = true
	verbose = true
[log]
	abbrevCommit = true
	date = relative
{{- if eq .chezmoi.os "windows" }}
[credential]
	helper = manager
{{- else }}
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
	helper =
	helper = /usr/lib/share/git-credential-manager-core/git-credential-manager-core
	credentialStore = secretservice
	guiPrompt = false
	msauthFlow = devicecode
	helper =
	helper = /usr/bin/git-credential-manager
{{- end }}
[pull]
	ff = only
	autostash = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[pack]
	writeReverseIndex = true
[push]
	default = upstream
	followTags = true
	recurseSubmodules = on-demand
	autoSetupRemote = true
[rebase]
	autoSquash = true
	autoStash = true
	stat = true
	updateRefs = true
[help]
	autoCorrect = prompt
[checkout]
	guess = true
[diff]
	mnemonicprefix = true
[merge]
	directoryRenames = true
[status]
	showStash = true
{{- if eq .chezmoi.os "windows" }}
[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
{{- else }}
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
{{- end }}
[core]
	untrackedCache = true
[difftool "vscode"]
  cmd = code-insiders --wait --diff $LOCAL $REMOTE
[mergetool "vscode"]
  cmd = code-insiders --wait $MERGED
[diff]
  tool = vscode
[merge]
  tool = vscode
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = true
[receive]
	fsckObjects = true
[credential "https://dev.azure.com"]
	useHttpPath = true
[credential "https://gitlab.freedesktop.org"]
	provider = generic
[review "review.lineageos.org"]
	username = erik-pro
[gitreview]
	username = alex19EP
{{- if ne .chezmoi.os "windows" }}
[scalar]
	repo = /home/alex/repos/linux/src
{{- end }}
[credential "https://opendev.org"]
	provider = generic
[include]
	path = ~/.config/git/config-personal
[credential "https://salsa.debian.org"]
	provider = generic
